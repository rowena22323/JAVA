public class ifelse {

	public static void main(String[] args) {
		// TODO 自動生成されたメソッド・スタブ
		Scanner sc=new Scanner(System.in);
		
		System.out.print("input　ｙ>");
		String str = sc.nextLine();
		
		if(str.equals("y")) {
			System.out.println("「"+str+"｣was inputed correctly");
			}else {
				System.out.println("「"+str+"｣is not same with memorized letter");
			}
			}

		}
	public static void main(String[] args) {
		// TODO 自動生成されたメソッド・スタブ
		//比較用の文字列を管理する変数の宣言と初期化
		String str ="テスト" ;
		System.out.println("--if文開始--");
		
		if (str.equals("テスト")) {
			System.out.println("String型の変数strと文字列\"テスト\"とは意味的に等しい");
		}
		System.out.println("--if文終了--");
		
import java.util.Scanner;
public class IfElseIfStatement {

	public static void main(String[] args) {
		// TODO 自動生成されたメソッド・スタブ
		Scanner sc = new Scanner(System.in);
		
		int num1 = 5;
		System.out.print("Enter the number > ");
		int num2 = sc.nextInt();
		
		if(num2>num1) {
			System.out.println(num1+"is smaller than"+num2);
		}else if(num2<num1) {
			System.out.println(num1+"is bigger than"+num2);
		}else {
			System.out.println(num1+"and"+num2+"are same number");
		}
		
public class NestedIfStatement1 {

	public static void main(String[] args) {
		// TODO 自動生成されたメソッド・スタブ
		// 比較用の数値を管理するための変数aを宣言し、7で初期化
		int a=15;
		
		System.out.println("****if文の判定開始****");
		
		if(a>=0) {
			System.out.println("変数aは0以上");
			if(a<=10) {
				System.out.println("変数aは10以下");
			}else {
				System.out.println("変数aは10より大きい");	
			}
		}
		System.out.println("****if文の判定終了****");
		
